package clases;

import java.io.File;

public class ad1_clases {
	File file;
	
	public ad1_clases(String[] args) {
		file = new File(args[0]);
	}
	
	public void imprimir_ficheros(String[] args) {
		if(file.isDirectory()) {
			File[] ficheros = file.listFiles();
			for(File f : ficheros) {
				System.out.println(f.getName());
			}
		}
	}
	
}
