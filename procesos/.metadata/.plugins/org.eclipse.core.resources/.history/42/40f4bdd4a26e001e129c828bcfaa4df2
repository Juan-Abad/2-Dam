
public class Principal {

	public static void main(String[] args) {
		NumOculto numOculto = new NumOculto();
		Hilo[] arrayHilos = new Hilo[10];
		Boolean acertarNum = true;
		int num;

		for (int i = 0; i < arrayHilos.length; i++) {
			arrayHilos[i] = new Hilo();
			arrayHilos[i].start();
		}

		while (acertarNum) {
			if (numOculto.adviniarNumero((int) (Math.random() * 99 + 1)) == 1) {
				for (Hilo h : arrayHilos) {
					if(Thread.currentThread().getId()!=h.getId()) {
						h.setAcertar(false);
					}
				}
				System.out.println("Soy el hilo " + Thread.currentThread().getId());
				acertarNum = false;
			}

		}

		for (Thread h : arrayHilos) {
			try {
				h.join();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}

	}

}
