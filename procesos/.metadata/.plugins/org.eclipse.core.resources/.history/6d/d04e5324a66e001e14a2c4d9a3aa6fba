
public class Principal {

	public static void main(String[] args) {
		NumOculto numOculto = new NumOculto();
		Hilo[] arrayHilos = new Hilo[10];
		Boolean acertarNum = true;
		int num;

		for (int i = 0; i < arrayHilos.length; i++) {
			arrayHilos[i] = new Hilo();
			arrayHilos[i].start();
		}

		while (acertarNum) {
			num = (int) (Math.random() * 99 + 1);
			if (numOculto.adviniarNumero(num) == 1) {
				System.out.println("Soy el hilo " + Thread.currentThread().getId() +" numero: " + num+", numerOculto:"+numOculto.getNumOculto());
				for (Hilo h : arrayHilos) {
					if(Thread.currentThread().getId()!=h.getId()) {
						h.setAcertar(false);
					}
				}
				acertarNum = false;
			}

		}

		

	}

}
