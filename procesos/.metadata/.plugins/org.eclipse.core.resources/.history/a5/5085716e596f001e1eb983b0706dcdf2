
public class Hilo implements Runnable {

	private static Boolean acertar = true;
	private Integer numAleatorio;
	private NumOculto numOculto;

	@Override
	public void run() {
		synchronized (acertar) {
		while (acertar) {
			System.out.println("Soy el hilo "+Thread.currentThread().getId()+", voy a probar el num:"+numAleatorio);
			numAleatorio = ((int) (Math.random()*99+1));
			switch (numOculto.adviniarNumero(numAleatorio)) {
			case -1:
				detener();
				continue;
			case 1:
				System.out.println("He acertado, soy :" + Thread.currentThread().getId()+", num mio: "+numAleatorio+", numOculto: "+numOculto.getNumOculto());
			}
		}
	}

	public Hilo() {
		super();
		acertar = true;
		numOculto = new NumOculto();
	}

	public void detener() {
		Hilo.acertar = false;
	}
	
	

}
