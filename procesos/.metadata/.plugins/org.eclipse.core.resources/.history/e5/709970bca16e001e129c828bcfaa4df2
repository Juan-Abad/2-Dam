
public class Principal {

	public static void main(String[] args) {
		NumOculto numOculto = new NumOculto();
		Thread[] arrayHilos = new Thread[10];
		Boolean acertarNum = true;

		for (int i = 0; i < arrayHilos.length; i++) {
			arrayHilos[i] = new Thread(new Hilo());
			arrayHilos[i].start();
		}

		while (acertarNum) {
			if (numOculto.adviniarNumero((int) (Math.random() * 99 + 1)) == 1) {
				for (Thread h : arrayHilos) {
					if(Thread.currentThread().getId()!=h.getId()) {
						h.set
					}
				}
				acertarNum = false;
			}

		}

		for (Thread h : arrayHilos) {
			try {
				h.join();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}

	}

}
